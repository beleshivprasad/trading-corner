<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
        integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/13ecf0dbf7.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style/style.css" type="text/css" />
    <link rel="icon" href="/logo/logo.png">
    <title>Trading Corner</title>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="/">Trading Corner</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link btn btn-dark" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link btn btn-dark" href="/login">Login</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Sign up form -->

    <div class="container-fluid">
        <div class="row  signup">
            <div class="col-md-6 m-auto">
                <div class="card card-body">
                    <h1 class="text-center mb-3">
                        <i class="fas fa-user-plus"></i> Register
                    </h1>
                    <%if(typeof error != 'undefined'){%>
                        <% error.forEach(function(error){ %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong><%= error.msg %></strong>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>                             
                        <% }) %> 
                    <%}%>
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                                value="<%= typeof name != 'undefined' ? name : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="pswd" class="form-control"
                                placeholder="Create Password" value="<%= typeof pswd != 'undefined' ? pswd : '' %>" />
                        </div>
                        <div class="form-group">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="cnfpswd" class="form-control"
                                placeholder="Confirm Password"
                                value="<%= typeof cnfpswd != 'undefined' ? cnfpswd : '' %>" />
                        </div>
                        <button type="submit" class="btn btn-dark btn-block">
                            Register
                        </button>
                    </form>
                    <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sing up form end -->

    <!-- footer -->
    <div class="null" id="contact"></div>
    <footer class="footer ftr">
        <div class="container">
            <span class="">
                <hr />
                <div class="container-fluid">
                    <p class="float-right"><a href="#">Back to top</a></p>
                    <p>&copy;2021 TradingCorner.com</p>
                </div>
            </span>
        </div>
    </footer>
    <!-- footer -->
</body>
<!-- Optional JavaScript; choose one of the two! -->

